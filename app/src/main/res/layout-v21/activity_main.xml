<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:id="@+id/searchLayout"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hamArrowIcon"
                android:src="@mipmap/ic_menu_grey600_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/search"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ua.kaganovych.persistencesearch.CustomEditText
                android:id="@+id/search"
                android:layout_toRightOf="@+id/hamArrowIcon"
                android:layout_toLeftOf="@+id/clear"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:hint="Search"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/clear"
                android:src="@mipmap/ic_close_black_24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/search"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <ua.kaganovych.persistencesearch.CustomListView
                android:id="@+id/listView"
                android:background="@android:color/white"
                android:layout_below="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/white"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
